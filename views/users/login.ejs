<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/button.css">

  
 <div class="container d-flex  justify-content-center align-items-center ">
  <div class="row flex-fill">                
    <div class="col-md-6 offset-md-3">     
      <div class="card shadow ">
        
       
       <div class="card-body">
         <h5 class="card-title">Đăng nhập</h5>
        <form action="/login" method="POST" class="validated-form" novalidate>
          <!-- Username -->
          <div class="mb-3">
              <label class="form-label" for="username">Tên đăng nhập:</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
              />
              <div class="valid-feedback">
                Ok!
              </div>
              <div class="invalid-feedback">
                Hãy cung cấp tên tài khoản hợp lệ!
              </div>
          </div>
          <!-- Password -->
          <div class="mb-3">
              <label class="form-label" for="password">Mật khẩu:</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">
                Ok!
              </div>
              <div class="invalid-feedback">
                Hãy cung cấp mật khẩu hợp lệ!
              </div>
          </div>
          
          <div class="d-grid gap-2 mb-1 col-12 mx-auto">
      <button class="dn1 p-2 btn btn-success" >Đăng nhập</button>
      </div> 
      <div class="mb-3 d-grid gap-2 mb-1 col-12 mx-auto">
         <p style="margin-bottom: 7px; margin-top: 10px; overflow: hidden; text-align: center; font-size: 14px;  color: #727475;
; font-weight: bold;">HOẶC</p>
            <a href="/auth/google" class="btn  btn-bordered dn2">
