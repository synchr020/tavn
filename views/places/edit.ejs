<% layout('layouts/boilerplate') %> 

    <div class="row">
        <h1 class="text-center">Sửa địa điểm du lịch</h1>
        <div class="col-6 offset-3">
            
        <form action="/places/<%=place._id%>?_method=PUT" method="POST" novalidate enctype="multipart/form-data" class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Tên khu du lịch</label>
                <input class="form-control" type="text"id="title" name="place[title]" value="<%=place.title%> " required>
                <div class="valid-feedback">
                    Ok!
                </div>
            </div>
    
            
            <div class="mb-3">
                <label class="form-label" for="location">Địa chỉ</label>
                <input class="form-control" type="text" id="location" name="place[location]" value="<%= place.location  %> " required>
                <div class="valid-feedback">
                    Ok!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Thêm ảnh</label>
               <input type="file" name="image" multiple id="image">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Giá vào cửa</label>
            <div class="input-group mb-3">
                <span id="price-label" class="input-group-text" >VNĐ</span>
                <input name="place[price]" aria-describedby="price-label" type="text" id="price" class="form-control" placeholder="0.00" aria-label="price" value="<%= place.price  %>" required>
                <div class="valid-feedback">
                     Ok!
                </div>
              </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Mô tả</label>
                <textarea class="form-control" type="text" id="description" name="place[description]" ><%= place.description  %></textarea required>
                    <div class="valid-feedback">
                        Ok!
                    </div>
            </div>

            <div class="mb-3">
                <% place.images.forEach(function(img,i) { %>
                    <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i  %>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Xóa? </label>
                    
               <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Cập nhật</button>
    
            </div>
    
    
        </form>
       
    
        </div>
    </div>